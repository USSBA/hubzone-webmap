//defining global variables for hubzone map controllers
var map = {}; //the map object

/* exported hzQueryMarker */
var hzQueryMarker = {};

/* exported hzUserLocation */
var hzUserLocation = {};

//create the map on load, when idle, jump to updateMap to get features
/* exported initMap */
function initMap() {

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 39.8282, lng: -98.5795},
    zoom: 5,
    zoomControl: true,
    zoomControlOptions: {
      position: google.maps.ControlPosition.RIGHT_BOTTOM
    },
    streetViewControlOptions: {
      position: google.maps.ControlPosition.RIGHT_BOTTOM
    },
    mapTypeControlOptions: {
      mapTypeIds: ['roadmap', 'hz_map', 'hybrid' ],
      position: google.maps.ControlPosition.BOTTOM_CENTER
    },
  });

  //adds in the hz style into the basemap picker
  var hzStyledMap = new google.maps.StyledMapType(hzBaseMapStyle, {name: 'Gray'});
  map.mapTypes.set('hz_map', hzStyledMap);
  map.setMapTypeId('roadmap', {name: 'Wow'});

  //adds the map legend and geolocation button
  map.controls[google.maps.ControlPosition.LEFT_BOTTOM].push(document.getElementById('legend'));
  map.controls[google.maps.ControlPosition.RIGHT_BOTTOM].push(document.getElementById('geolocation'));

  // adds listener that triggers whenever the map is idle to update with new features.
  google.maps.event.addListener(map, 'idle', updateIdleMap);
  map.addListener('click', catchMapClick);

  //adds autocomplete
  var searchInput = document.getElementById('search-field-small');
  var options = {
    types: ['geocode']
  };
  /* jshint unused: false */
  var autocomplete = new google.maps.places.Autocomplete(searchInput, options);

  // build out the markers
  /* jshint ignore:start */
  hzQueryMarker = new HubzoneMapMarker({
    icon: '<%= image_path 'hubzone-map-marker.svg' %>'
  });
  hzUserLocation = new HubzoneMapMarker({
    icon: '<%= image_path 'geolocation-marker.svg' %>'
  });
  /* jshint ignore:end */


  //initialize user location
  GeoLocation.getUserLocation(navigator.geolocation);

  //returns the map
  return map;
}
