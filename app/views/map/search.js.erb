var responseBody = JSON.parse('<%= @body.html_safe %>');
$('#search-address').html('<i class="fa fa-map-marker" aria-hidden="true"></i>' + responseBody.formatted_address);

var hubzoneStatusIndicator = (responseBody.hubzone.length > 0) ? '<i class="fa fa-check-circle-o" aria-hidden="true"></i>': '<i class="fa fa-times-circle-o" aria-hidden="true"></i>';
$('.hubzone-status-indicator').html(hubzoneStatusIndicator);

var hubzoneStatus = (responseBody.hubzone.length > 0) ? 'Qualified HUBZone': 'Not Qualified';
$('#hubzone-status').html(hubzoneStatus);

sidebar.open();
jumpToLocation(responseBody.geometry.viewport);
updateMarkers(responseBody.geometry.location);
