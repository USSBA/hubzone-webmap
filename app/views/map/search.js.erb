$('#sidebar-content').html("<%= j render partial: "map_sidebar", locals: {body: JSON.parse(@body)} %>");  // jshint ignore:line
HZApp.HZQuery = JSON.parse('<%= @body.html_safe %>');
HZApp.HZQuery.geocodeLocation = null;
if (HZApp.HZQuery.geometry){
  HZApp.MapUtils.jumpToLocation({
    viewport: HZApp.HZQuery.geometry.viewport,
    location: HZApp.HZQuery.geometry.location
  });
  HZApp.HZQuery.geocodeLocation = HZApp.HZQuery.geometry.location;
}
sidebar.open();
HZApp.Markers.hzQueryMarker.updateMarkers(HZApp.HZQuery.geocodeLocation);
