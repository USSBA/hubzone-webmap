<!DOCTYPE html>
<html>
  <head>
    <title>HubzoneMap</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'hzmap', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="hubzone-map">
    <a class="usa-skipnav" href="#main-content"><%= t('header.skip_to_main') %></a>
    <header class="usa-header usa-header-extended" role="banner">
      <!-- Gov banner BEGIN -->
      <div class="usa-banner">
        <div class="usa-accordion">
          <header class="usa-banner-header">
            <div class="usa-grid usa-banner-inner">
            <%= image_tag("favicons/favicon-57.png", alt: "U.S. flag") %>
            <p><%= t('usa_banner.title') %></p>
            <button class="usa-accordion-button usa-banner-button"
              aria-expanded="false" aria-controls="gov-banner">
              <span class="usa-banner-button-text"><%= t('usa_banner.button_text') %></span>
            </button>
            </div>
          </header>
          <div class="usa-banner-content usa-grid usa-accordion-content" id="gov-banner">
            <div class="usa-banner-guidance-gov usa-width-one-half">
              <%= image_tag("icon-dot-gov.svg", class: "usa-banner-icon usa-media_block-img", alt: "Dot gov") %>
              <div class="usa-media_block-body">
                <p>
                  <strong><%= t('usa_banner.block_body_strong') %></strong>
                  <br>
                  <%= t('usa_banner.block_body_text') %>
                </p>
              </div>
            </div>
            <div class="usa-banner-guidance-ssl usa-width-one-half">
              <%= image_tag("icon-https.svg", class: "usa-banner-icon usa-media_block-img", alt: "SSL") %>
              <div class="usa-media_block-body">
                <p><%= t('usa_banner.block_body_ssl').html_safe %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Gov banner END -->
      <div class="usa-navbar">
        <button class="usa-menu-btn">Menu</button>
        <div class="usa-logo" id="logo">
          <em class="usa-logo-text">
            <%= image_tag("sba-logo.png", id: "sba-logo", alt: "U.S. Small Business Administration logo") %>
            <a href="/map" accesskey="1" title="Home" aria-label="Home"><%= t('hubzone_map') %></a>
          </em>
        </div>
      </div>
      <nav role="navigation" class="usa-nav">
        <div class="usa-nav-inner">
          <button class="usa-nav-close">
            <%= image_tag("close.svg", alt: "close") %>
          </button>
          <div class="usa-nav-secondary">
            <ul class="usa-unstyled-list usa-nav-secondary-links">
              <li>
                <a href="#"><%= t('menu.hubzone_program') %></a>
              </li>
              <li>
                <a href="#"><%= t('menu.accessible_version') %></a>
              </li>
              <li>
                <a href="#"><%= t('menu.help') %></a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="usa-overlay"></div>
    <main id="main-content">
      <%= yield %>
    </main>
    </body>
</html>
